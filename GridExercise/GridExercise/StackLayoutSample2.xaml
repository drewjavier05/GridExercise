<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridExercise.StackLayoutSample2"
             BackgroundColor="Azure">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill">
            <Label Text="drew photography" TextColor="Black" FontSize="15" Margin="5"/>
            <Image Source="http://lorempixel.com/1920/1080/nature/3/"/>
                                 
            <StackLayout Orientation="Horizontal">
                <Label Text="Like" TextColor="SkyBlue" Margin="5"/>
                <Label Text="Comment" TextColor="SkyBlue" Margin="5"/>
                <Label Text="Share" TextColor="SkyBlue" Margin="5"/>
            </StackLayout>
            
            <BoxView Color="#f0f0f0" HeightRequest="1"/>
            <Label Text="700 Likes" TextColor="Black" FontSize="14" Margin="5"/>
            <Label Text="This is a Shot yesterday in Skanor, Sweden, when driving home, from a couple of days of work in Denmark." Margin="5"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>